#!/usr/bin/env xonsh

$LANG='en_US.utf8';

def scan_xsh():
    source @([p for p in p'$X'.glob('*.xsh')])

$GOPATH='~/.golang'
$BUN_INSTALL='~/.bun'
aliases['python'] = 'python3.11'
$PY_BASE=$(python -m site --user-base)

aliases |= { 
    'b': 'brew',
    'g': 'git',
    'gits': 'git status',
    'o': 'open .',
    # 'zd': '~/.zsh',
    'zed': '$EDITOR $Z',

    'xonc': 'xonsh -c',
    'spanso': 'espanso edit',

    'python': 'python3.11',
    'ts': 'tailscale',
    'd': 'duckdb',

    'disks': 'duf -only local,fuse',
    
    '..': 'cd ..',
    'ls': 'ls -h',
    'la': 'ls -lah',

    # 'ttl: 'sudo sysctl net.inet.ip.ttl=65',

    'flushdns': 'dscacheutil -flushcache',
    'csv': 'xls',
    'jupy': 'jupyter notebook',

    '$': '',
}

thingies=[
    'sh',
    'abbrevs',
    'homebrew'
    ]
xontrib load @(thingies)

$PROMPT = '{env_name}{BOLD_GREEN}{user}{BOLD_BLUE} {cwd_base}{branch_color}{curr_branch: {}}{RESET} {RED}{last_return_code_if_nonzero:[{BOLD_INTENSE_RED}{}{RED}] }{RESET}{BOLD_YELLOW}‚ùØ{RESET} '

scan_xsh()