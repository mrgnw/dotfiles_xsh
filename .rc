#!/usr/bin/env xonsh

$LANG='en_US.utf8';

$X='~/.xsh'
def scan_xsh():
    files = [p for p in p'$X'.glob('*.xsh')]
    source @(files)

$GOPATH='~/.golang'
$BUN_INSTALL='~/.bun'
aliases['python'] = 'python3.11'
aliases['pip'] = 'pip3.11'
$PY_BASE=$(python -m site --user-base)

aliases |= {
    'zed': '$EDITOR $Z',
    'xed': '$EDITOR $X',
    'xonc': 'xonsh -c',
    'disks': 'duf -only local,fuse',  
    '..': 'cd ..',
    'ls': 'ls -h',
    'la': 'ls -lah',
    'ttl': 'sudo sysctl net.inet.ip.ttl=65',
    'csv': 'xls',
    '$': '',
    '‚ùØ': '',   
}

thingies=[
    'sh',
    'abbrevs',
    'homebrew',
    'zoxide',
]
# xpip install $@(thingies)
xontrib load @(thingies)

abbrevs |= {
     'b': 'brew',
     'd': 'duckdb',
    'dc': 'docker-compose',
    'up': 'docker-compose up',
    'dl': 'aria2c',
     'g': 'git',
    'gs': 'git status',
     'o': 'open .',
    'py': 'python',
    'p+': 'pip install',
    'p-': 'pip uninstall',
    'ts': 'tailscale',
    'xw': 'xontrib web',
     'y': 'yt-dlp',

    'spanso': 'espanso edit',
    'flush': 'dscacheutil -flushcache',
}

scan_xsh()