#!/usr/bin/env xonsh

$LANG='en_US.utf8';

$X='~/.xsh'
def scan_xsh():
	files = [p for p in p'$X'.glob('*.xsh')]
	source @(files)

$GOPATH='~/.golang'
$BUN_INSTALL='~/.bun'
aliases['python'] = 'python3.11'
aliases['pip'] = 'pip3.11'
$PY_BASE=$(python -m site --user-base)

aliases |= {
	'zed': '$EDITOR $Z',
	'xed': '$EDITOR $X',
	'..' : 'cd ..',
	'la' : 'ls -lah',
	'csv': 'xls',
	'$'  : '',
	'‚ùØ'  : '',
}

xpkgs=[
	'sh',
	'abbrevs',
	'homebrew',
	'zoxide',
]
# xpip install $@(xpkgs)
xontrib load @(xpkgs)

abbrevs |= {
	'b'    : 'brew',
	'cfd'  : 'docker-compose',
	'd'    : 'duckdb',
	'dc'   : 'docker-compose',
	'up'   : 'docker-compose up',
	'disks': 'duf -only local,fuse',
	'dl'   : 'aria2c',
	'g'    : 'git',
	'gs'   : 'git status',
	'jupy' : 'jupyter notebook',
	'o'    : 'open .',
	'py'   : 'python',
	'p+'   : 'pip install',
	'p-'   : 'pip uninstall',
	'lz'   : 'lazy docker',
	'ts'   : 'tailscale',
	'ttl'  : 'sudo sysctl net.inet.ip.ttl=65',
	'xonc' : 'xonsh -c',
	'xw'   : 'xontrib web',
	'y'    : 'yt-dlp',
	'spanso': 'espanso edit',
	'flush' : 'dscacheutil -flushcache',
}

scan_xsh()